<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="PreferenceTheme" parent="android:Theme.Light">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
    </style>

    <style name="PreferenceListHeader">
        <item name="android:background">@color/light_gray</item>
        <item name="android:layout_height">30dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>